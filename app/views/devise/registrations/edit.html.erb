<div class="row mt-2">
 <div class="col-md-4">
<h3> Username: <%= @user.name %> </h3>
</div>
<div class="col-md-4 ms-auto">
<div class="d-flex justify-content-end">
   <h3> <%= @user.email %> </h3>
</div>
</div>
</div>
<h3>Number of completed tasks: "<%= @user.complete_tasks %>"</h3>
<h3>Number of created tasks: "<%= @user.tasks.count %>"</h3>
<table class="table table-bordered table-dark mt-2">
  <thead>
    <tr>
      <th scope="col">Task</th>
      <th scope="col">Topic</th>
      <th scope="col">Condition</th>
      <th scope="col">Tags</th>
      <th scope="col">Picture</th>
       <th scope="col">Rating</th>
      <th scope="col"><%= link_to "New task", new_task_path, class: 'btn btn-light btn-lg d-flex justify-content-center' %></th>
    </tr>
  </thead>
  <tbody>
  <% @user.tasks.each do |user_task| %>
    <tr>
      <td scope="row"> <%= link_to user_task.name, task_path(user_task.id) %> </td>
      <td> <%= user_task.topic.name %> </td>
      <td> <%= markdown(user_task.condition) %></td>
      <td> 
      <% user_task.tags.each do |tag| %>
      <%= tag.name %>
      <% end %> 
      </td>
      <td>
        <% user_task.avatar.each do |avatars| %>
          <%= image_tag(avatars, height: 100, width: 150) %>
        <% end %>
      </td>
      <td> <div class="show_avg_rating"><%= avg_rating(user_task.id) %></div>
        <%= image_tag("star-on",size: "30x30")%> 
      </td>
      <td>
      <div class="d-flex justify-content-end">
        <%= link_to "Delete", task_path(user_task.id), data: {confirm: 'You are really?'}, class: 'btn btn-light btn-lg', method: :delete %>
        <%= link_to "Change", edit_task_path(user_task.id), class: 'btn btn-light btn-lg ms-2' %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, class: "btn btn-dark btn-lg" %> 


