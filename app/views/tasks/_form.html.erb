<%= form_for @task, tags: @tags do |f| %>
  <div class = "form-group">
    <%= f.label (t ".name"), class: "label" %>
    <%= f.text_field :name, class: "form-control", placeholder: (t ".plho_name") %>
  </div>
<div class = "form-group">
     <%= f.label (t ".answers"), class: "label" %>
     <%= f.text_field :all_answers, class: 'form-control', placeholder: (t ".plho_answers") %>
  </div>
  <div class = "form-group">
    <%= f.label (t ".tags"), class: "label" %>
    <%= f.collection_select :tag_ids, @tags, :id, :name, {}, multiple: true, class: 'js-multiple-select w-100' %>
  </div>

  <div class = "form-group">
    <%= f.label (t ".topic"), class: "label" %>
    <%= f.collection_select(:topic_id, Topic.all, :id, :name, {:multiple => true}, class: "form-control") %>
  </div>

  <div class="field">
    <%= f.label (t ".gallery"), class: "label" %> <br>
    <%= f.file_field :avatar, multiple: true %>
  </div>

  <div class = "form-group">
    <%= f.label (t ".description"), class: "label" %>
    <div class="form-condition">
    <%= f.text_area :condition, style: "width: 100%; font-size:16px;", rows: 8, maxlength: 400, placeholder: (t ".plho_description") %>
    </div>
  </div>
  <div class = "form-group">
    <%= f.submit (t '.button_save'), class: 'btn btn-outline-primary pull-xxl-right mt-2' %>
    <%= link_to (t ".button_back"), :back, class: "btn btn-outline-primary pull-xxl-right mt-2" %> 
  </div>
<% end %>
