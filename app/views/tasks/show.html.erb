<%= render 'flash' %>
  <div class="row mt-2">
    <div class="col-md-4">
      <h2>
        <%= @task.name %> ? 
        <%= avg_rating(@task.id) %>
        <%= image_tag("star-on",size: "30x30")%>
      </h2>
    </div>
    <div class="col-md-4 ms-auto">
      <div class="d-flex justify-content-end">

        <% if current_user && @task.user_id==current_user.id %>
          <%= link_to "Delete" , task_path, data: {confirm: 'You are really?' }, class: 'btn btn-dark btn-lg' , method:
            :delete %>
            <%= link_to "Change" , edit_task_path, class: 'btn btn-dark btn-lg ms-2' %>
              <% end %>
                <%= link_to "Add task" , new_task_path, class: 'btn btn-dark btn-lg ms-2' %>

      </div>
    </div>
  </div>
  <%= render 'showtask' %>
  
    <%= render 'useranswer' %>
    <%= link_to "Back", :back, class: "btn btn-outline-primary pull-xxl-right mt-2" %> 